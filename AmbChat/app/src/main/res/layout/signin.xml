<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#003333"
        android:orientation="vertical"
        android:paddingBottom="70dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="70dp">

        <ImageView
            android:id="@+id/imgSignIn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_account_circle_white_48" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/usernam" />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:hint="User name"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_pass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="#FFFFFF"
                android:hint="Password"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#003333"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckbRemmemberPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="0dp"
                android:layout_weight="1.5"
                android:text="Remember Password"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btnRememberPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="#003333"
                android:gravity="right|center"
                android:text="Forgot Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#003333"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNeuChuaCoAcc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="Nếu chưa có tài khoản"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnNhapVaoDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="#003333"
                android:gravity="left|center"
                android:text="Nhấn vào đây"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Log in"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>



</LinearLayout>